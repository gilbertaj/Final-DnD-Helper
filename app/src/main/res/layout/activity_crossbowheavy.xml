        android:layout_alignLeft="@+id/textView102"
        android:layout_alignStart="@+id/textView102"
        android:id="@+id/textView103"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:text="DMG(M): 1d10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView103"
        android:layout_alignLeft="@+id/textView103"
        android:layout_alignStart="@+id/textView103"
        android:id="@+id/textView104"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:text="Critical: 19-20/x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView104"
        android:layout_alignLeft="@+id/textView104"
        android:layout_alignStart="@+id/textView104"
        android:id="@+id/textView105"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:text="Range: 120ft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView105"
        android:layout_alignLeft="@+id/textView105"
        android:layout_alignStart="@+id/textView105"
